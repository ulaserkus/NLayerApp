@{
    ViewData["Title"] = "Error";
}
@model ErrorViewModel
<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occured while processing your request.</h2>
@if(Model.Errors.Any()){
    <div class="alert alert-danger">
        @foreach (var item in Model.Errors)
        {
            <p>@item</p>
        }
    </div>
}